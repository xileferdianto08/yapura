<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/ruanganCard"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="10dp"
            android:background="@drawable/backgroud1">

            <TextView
                android:id="@+id/namaRuangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/calibri"
                android:padding="25dp"
                android:text="Kelas"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="Kapasitas: "
                android:textAlignment="viewStart"
                android:textColor="@color/lightWhite"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/capacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="20"
                android:textAlignment="viewStart"
                android:textColor="@color/lightWhite"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="Dari: "
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="2020-05-21"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98dp"
                android:layout_marginTop="41dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="- "
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="43dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="15:10"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="63dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="2020-05-21"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="61dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="- "
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="123dp"
                android:layout_marginTop="63dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="15:10"
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="Sampai: "
                android:textAlignment="viewStart"
                android:textColor="@color/gray"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="85dp"
                android:fontFamily="@font/calibri"
                android:padding="50dp"
                android:text="Keperluan: "

                android:textColor="@color/white"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/necessity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="110dp"
                android:fontFamily="@font/calibri"
                android:padding="25dp"
                android:text="Kelas"
                android:textColor="@color/white"
                android:textSize="18sp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="133dp"
                android:fontFamily="@font/calibri"
                android:padding="26dp"
                android:text="Status: "
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="139dp"
                android:fontFamily="@font/calibri"
                android:padding="20dp"
                android:textAlignment="center"
                android:text="Waiting for Approval"
                android:textColor="@color/white"
                android:textSize="18sp" />




            <ImageView
                android:id="@+id/fotoRuangan"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logoumn" />



        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>